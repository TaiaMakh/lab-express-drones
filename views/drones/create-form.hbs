<h2>Create a new drone</h2>
<form action="/drones/create" method="POST">
    <label for="name">Name</label>
    <input type="text" name="name" id="name">
    <label for="propellers">Propellers</label>
    <input type="text" name="propellers" id="propellers">
    <label for="maxSpeed">MaxSpeed<maxSpeed/label>
    <input type="text" name="maxSpeed" id="maxSpeed">
    
    <button type="submit">Create</button>
</form>

{{#if errorMessage}}
<p>{{errorMessage}}</p>
{{/if}}